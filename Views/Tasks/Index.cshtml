@model IEnumerable<Projekt_ISS_be.Models.Task> 
@{
    ViewData["Title"] = "My Tasks";
}

<h2>My Tasks</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Task</a>
</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@task.TaskId" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">No tasks found.</td></tr>
        }
    </tbody>
</table>

