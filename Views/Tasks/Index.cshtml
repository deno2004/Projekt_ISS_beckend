@model IEnumerable<Projekt_ISS_be.Models.Task> 
@{
    ViewData["Title"] = "My Tasks";
}

<div class="container-fluid px-5 py-4"> 
    <h2>All Tasks</h2> 
    <div class="row g-4"> 
        @if (Model != null && Model.Any()) 
        { 
            @foreach (var tasks in Model) 
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2"> 
                    <div class="movie-card"> 
                        <div class="movie-info"> 
                            <h5>@tasks.Title</h5> 
                            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@tasks.TaskId" class="btn-view">View Details</a> 
                        </div> 
                    </div> 
                </div>
            }
        } else
        {
                <p class="text-center">No tasks available at the moment.</p>
        }
    </div> 
</div>

